.cell-group {
  margin-bottom: 20rpx;
  background-color: white;
}

.cell {
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  height: 110rpx;
  box-sizing: border-box;
  position: relative;
  width: 100%;
  overflow-x: hidden;
}

.cell::after {
  content: '';
  border-bottom: 1rpx solid #f0f0f0;
  position: absolute;
  left: calc(40rpx + 48rpx + 30rpx);
  bottom: 0;
  width: 100%;
}

.cell:last-child::after {
  display: none;
}

.cell .cell-title {
  font-size: 28rpx;
  line-height: 1;
  color: #1a1a1a;
  font-weight: 600;
}

.cell .cell-value {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.cell .cell-value text {
  font-size: 22rpx;
  line-height: 1;
  color: #1a1a1a;
}

.cell-icon {
  width: 48rpx;
  height: 48rpx;
  display: block;
  margin-right: 30rpx;
}
