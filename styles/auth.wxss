/* title */
.auth-header {
  margin-bottom: 130rpx;
}
.auth-header .auth-title {
  font-size: 48rpx;
  line-height: 1;
  color: #1a1a1a;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.auth-header .auth-desc {
  font-size: 28rpx;
  color: #999999;
  line-height: 28rpx;
  font-weight: 400;
}

.bottom-bg {
  width: 750rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: -1;
}

/* form */
.form {
  /* padding: 0 80rpx; */
  display: block;

  --cell-vertical-padding: 50rpx 40rpx;
  /* TODO: label与placeholder没有对齐 */
}

.input-container {
  margin: 0 -16px;
}

.field-label {
  margin-left: 16px;
}
.field {
  margin-bottom: 60rpx;
}

.field:last-of-type {
  margin-bottom: 100rpx;
}

.field .field-label {
  font-size: 28rpx;
  line-height: 1;
  color: #1a1a1a;
}

.icon-eye {
  background-color: transparent;
  width: 48rpx;
  height: 48rpx;
}

.form {
  overflow-x: hidden;
}
